// FabriceNeyret2 tweaked version
void mainImage( out vec4 O, vec2 U )
{
	vec2 R = iResolution.xy;
    U = (U - R/2.) / R.y * 1e3;
    O -= O;
    
    mat2 r = mat2(sin(6.28/15.+ 1.57*vec4(1,0,2,1)));
    vec2 d = vec2(0,1);

    for (int i = 0; i < 15; i++)
       	O += sin( .628 * iTime + dot(U, d) / 3. ) / 15.,
        d *= r;
}